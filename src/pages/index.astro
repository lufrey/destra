---
import Pic from '../components/Pic.astro';
import Layout from '../layouts/Layout.astro';

const compatibleWith = [
  {
    title: 'OpenCV',
    image: '/images/icons/icon-opencv.svg',
    description:
      'Finger pose estimation with Mediapipe and OpenCV for the independent movement of the individual fingers.',
  },
  {
    title: 'ROS',
    image: '/images/icons/icon-ros.svg',
    description:
      'The U2D2 shield makes the hand ROS compatible and can be complemented by any ROS application.',
  },
  {
    title: 'C++',
    image: '/images/icons/icon-cpp.svg',
    description: 'The code can be executed directly via a microcomputer.',
  },
  {
    title: 'Python',
    image: '/images/icons/icon-python.svg',
    description:
      'With the help of the U2D2 shield, python code can be executed on the hand.',
  },
];
---

<Layout title="Destra Robotics">
  <div class="bg-primary">
    <div
      class="flex flex-col items-center max-w-screen-lg gap-6 p-10 m-auto text-bright md:flex-row"
    >
      <div
        class="flex flex-col items-center text-center md:items-start md:basis-2/3"
      >
        <h1 class="text-4xl fadein">Make robotics affordable.</h1>
        <div class="pt-2 font-light fadein">
          3D-printed humanoid hand. ROS compatible.
        </div>
        <div class="fadein bg-bright w-7/12 mt-6 h-[2px] hidden md:block"></div>
        <div
          class="px-6 py-1 mt-10 transition-all rounded-full shadow-sm cursor-pointer fadein hover:shadow-md md:mr-auto bg-accent hover:bg-accentHover"
        >
          Technical Data
        </div>
      </div>
      <Pic
        alt={'Hand'}
        src={import('../assets/hand_white.png')}
        aspectRatio={1}
        widths={[600, 1200]}
        sizes="(max-width: 600px) 300px, 100vw"
        imgClass="object-contain"
        class="w-full max-w-sm text-center fadein md:max-w-none md:basis-1/3 aspect-square shrink-0 bg-opacity-40 rounded-xl"
      />
    </div>
  </div>
  <div class="bg-bright">
    <div
      class="flex flex-col items-center max-w-screen-lg gap-6 p-10 m-auto text-primary md:flex-row-reverse"
    >
      <div class="flex flex-col items-center gap-6 basis-2/3">
        <h2 class="text-3xl fadein">What is Destra?</h2>
        <p class="font-light text-center fadein">
          Destra is a fully 3D-printed robotic hand that enables cost-effective
          manufacturing for teaching, prosthetics and interfacing with other
          robotic systems. With 6 degrees of freedom, each finger can be
          controlled independently and the thumb can be opposed. A suitable
          coupling point makes it compatible with any modern robot arm.
        </p>
        <div
          class="px-6 py-1 mt-2 transition-all duration-300 rounded-full shadow-sm cursor-pointer fadein hover:shadow-md hover:bg-dark bg-primary text-bright"
        >
          More Info
        </div>
      </div>
      <Pic
        alt={'Hand'}
        src={import('../assets/hand_black.png')}
        aspectRatio={1}
        widths={[600, 1200]}
        sizes="(max-width: 600px) 300px, 100vw"
        imgClass="object-contain"
        class="w-full max-w-sm text-center -translate-x-8 md:translate-x-0 fadein md:max-w-none md:basis-1/3 aspect-square shrink-0 bg-opacity-40 rounded-xl"
      />
    </div>
  </div>
  <div class="bg-primary">
    <div class="max-w-screen-lg gap-6 p-10 m-auto text-bright">
      <h2 class="text-3xl text-center fadein">Compatible with...</h2>
      <div
        class="grid mt-16 compatibility-list md:grid-cols-2 gap-x-16 gap-y-10"
      >
        {
          compatibleWith.map((compatibleSoftware) => (
            <div class="fadein compatible flex basis-full items-center gap-4 md:basis-1/2">
              <div class="flex aspect-square h-16 w-16 items-center justify-center rounded-xl bg-bright p-2 text-dark shadow-sm">
                <img
                  class="h-full w-full object-contain"
                  src={compatibleSoftware.image}
                  alt={compatibleSoftware.title}
                />
              </div>
              <div class="">
                <h4 class="text-xl">{compatibleSoftware.title}</h4>
                <p class="mt-2 font-light">{compatibleSoftware.description}</p>
              </div>
            </div>
          ))
        }
      </div>
    </div>
  </div>
</Layout>
