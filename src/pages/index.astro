---
import Layout from '../layouts/Layout.astro';
import Card from '../components/Card.astro';
---

<Layout title="Destra Robotics">
  <div class="flex p-10 bg-primary text-bright items-center">
    <div class="flex flex-col justify-start basis-2/3">
      <div class="text-4xl">Make robotics affordable.</div>
      <div class="font-light pt-2">
        3D-printed humanoid hand. ROS compatible.
      </div>
      <div class="bg-bright w-7/12 mt-6 h-[2px]"></div>
      <div
        class="bg-accent rounded-full py-1 px-6 mr-auto mt-10 cursor-pointer hover:bg-accentHover shadow-sm transition-all"
      >
        Technical Data
      </div>
    </div>
    <div
      class="basis-1/3 text-center h-60 flex justify-center items-center bg-white bg-opacity-40 rounded-xl"
    >
      Bild
    </div>
  </div>
  <div class="bg-bright h-20"></div>
</Layout>
